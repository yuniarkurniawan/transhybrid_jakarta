        <!-- FORM VIEW -->
        <record id="sale_order_line_service_model_thc_form_view" model="ir.ui.view">
            <field name="name">sale.order.line.service.model.thc.form.view</field>
            <field name="model">sale.order.line.service.model</field>
            <field name="arch" type="xml">
                <form 
                	string="Sales Order" class="o_sale_order" create="false" delete="false" edit="false">
                	<sheet>
                		<group>

                			<field 
		                    	name="service_id" 
		                    	string="Service"
		                    	class="oe_inline"
		                    />

		                    <field 
		                    	name="item_service_id" 
		                    	string="Item Service"
		                    	class="oe_inline"
		                    />
		                    
		                	<field 
                				name="po_name" 
                				string="Purchase Order"
                				class="oe_inline"
                			/>
		                	
		                	<field 
		                		name="po_order_date" 
		                		string="Date Order"
		                		class="oe_inline"
		                	/>
		                    
		                    <field 
		                    	name="rsf_date" 
		                    	string="RFS Date"
		                    	class="oe_inline"
		                    />
		                    
		                    
		                    <field 
		                    	name="company_name" 
		                    	string="Customer"
		                    	class="oe_inline"
		                    />

		                </group>

	                    <notebook>
	                    	<page string="List Uploads" >
                        		<field 
                        			string="List Uploads" 
                        			name="sale_order_line_service_detail_ids" 
                        			>
                        			<tree create="false" edit="false" delete="false">

                        				<field name="create_date" string="Upload Date"/>
                                        <field name="description" string="Description"/>
                                        <field 
                                            name="progress_bar" 
                                            string="Progress Bar" 
                                            widget="progressbar"/>
                        			</tree>
                        		</field>
	                    	</page>
	                    </notebook>                		
                	</sheet>
                </form>
            </field>
        </record>




        <!--  SEARCH VIEW -->
