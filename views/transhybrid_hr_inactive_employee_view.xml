<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE VIEW -->
        <record id="transhybrid_hr_inactive_employee_tree_view" model="ir.ui.view">
            <field name="name">transhybrid.hr.inactive.employee.tree.view</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="Karyawan" create="0" edit="0" delete="0">
                    <field name="nik"/>
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="active"/>                    
                </tree>
            </field>
        </record>



        <!-- FORM VIEW -->
        <record id="transhybrid_hr_inactive_employee_form" model="ir.ui.view">
            <field name="name">transhybrid.hr.inactive.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Karyawan" create="0" edit="0" delete="0">
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="hr.group_hr_user"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <field 
                            name="image" 
                            widget='image' 
                            class="oe_avatar"
                            options='{"preview_image":"image_medium", "size": [90, 90]}'/>
                        
                            <div class="oe_title">
                                <h1>
                                    <field 
                                        name="name" 
                                        placeholder="Nama Karyawan"
                                    />
                                    
                                </h1>

                                <!--
                                <field 
                                    name="category_ids" 
                                    widget="many2many_tags" 
                                    options="{'no_create_edit': True}" 
                                    />
                                -->

                                <field 
                                    name="category_employee" 
                                    options="{'no_create_edit': True}" 
                                    />


                            </div>
                        
                        <notebook>

                            <page 
                                name="personal_information" 
                                string="Informasi Pribadi" 
                                groups="hr.group_hr_user">
                                
                                
                                    <group string="Kewarganegaraan">
                                        <field 
                                            name="country_id" 
                                            string="Negara"
                                            class="oe_inline"
                                            options='{"no_open": True, "no_create": True}'/>
                                        
                                        <field 
                                            name="identification_id" 
                                            string="NIK"
                                            class="oe_inline"
                                            required="1"
                                            groups="hr.group_hr_user"/>
                                        
                                        <field 
                                            name="passport_id" 
                                            string="No. Passpor"
                                            class="oe_inline"
                                            groups="hr.group_hr_user"/>

                                        <field 
                                            name="bank_name"
                                            string="Nama Bank"
                                            class="oe_inline"
                                            />
                                        <field 
                                            name="bank_account_id"
                                            class="oe_inline"
                                            string="Akun Bank"
                                            context="{'default_partner_id': address_home_id}"
                                            

                                            />

                                        <field 
                                            name="file_cv" 
                                            widget="binary" 
                                            max-file-size="1048576" 
                                            filename="file_cv_filename"
                                            />

                                        <field name="file_cv_filename" invisible="1"/>

                                    </group>
                                    
                                    <group string="Data Pribadi">

                                        <field 
                                            name="last_education"
                                            string="Pendidikan Terakhir"
                                            class="oe_inline"
                                            required="1"
                                            />

                                        <field 
                                            name="gender" 
                                            string="Jenis Kelamin"
                                            class="oe_inline"
                                            required="1"
                                            />

                                        <field 
                                            name="marital"
                                            class="oe_inline"
                                            string="Status Perkawinan"
                                            required="1"
                                            />
                                    </group>
                                    <group>
                                        <field 
                                            name="place_of_birth"
                                            class="oe_inline"
                                            string="Tempat Lahir"/>

                                        <field 
                                            name="birthday" 
                                            string="Tanggal Lahir"
                                            class="oe_inline"
                                        />
                                        
                                        
                                        <field 
                                            name="blood_group"
                                            class="oe_inline"
                                            string="Golongan Darah"

                                            />

                                        <field 
                                            name="religion"
                                            class="oe_inline"
                                            string="Agama"
                                            />

                                        <field name="address_home_id" invisible="1"/>

                                        <field name="employee_family_ids">
                                            <tree create="1" delete="1">
                                                <field name="name"/>
                                                <field name="f_relationship"/>
                                                <field name="f_phone"/>
                                            </tree>
                                        </field>
                                        
                                    </group>
                                                                        
                                
                            </page>

                            <page name="public" string="Informasi Umum">
                                <group string="Kontak">
                                    
                                    <!--
                                    <field name="address_id"
                                        context="{'show_address': 1}"
                                        options='{"always_reload": True, "highlight_first_line": True}'/>
                                    -->
                                    <field 
                                        name="mobile_phone"
                                        required="1"
                                        string="No. HP"
                                        class="oe_inline"/>

                                    <field 
                                        name="work_email" 
                                        string="Email"
                                        widget="email"
                                        class="oe_inline"

                                        />

                                    <field 
                                        name="notes"
                                        class="oe_inline"
                                        />

                                </group>
                                <group string="Posisi">
                                    <field 
                                        name="department_id" 
                                        string="Departemen"
                                        class="oe_inline"
                                        />
                                    
                                    <field 
                                        name="job_id"
                                        class="oe_inline"
                                        string="Pekerjaan"/>

                                    <field 
                                        name="parent_id" 
                                        string="Atasan 1"
                                        class="oe_inline"
                                        />
                                    
                                    <field 
                                        name="coach_id" 
                                        string="Atasan 2"
                                        class="oe_inline"
                                        />
                                    
                                    <field 
                                        name="calendar_id"
                                        class="oe_inline"
                                        string="Jam kerja"/>
                                </group>
                                                                
                            </page>
                            
                            <page 
                                name="hr_settings" 
                                string="Pengaturan HR" 
                                groups="hr.group_hr_user">
                                
                                <group>
                                    <group string='Status' name="active_group">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="user_id" string="Nama User"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>

                    
                </form>
            </field>
        </record>
    

        <!-- SEARCH -->
        <record id="transhybrid_hr_inactive_employee_search_view" model="ir.ui.view">
            <field name="name">transhybrid.hr.employee.search.view</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employees">
                    <field name="name" string="Employees" filter_domain="['|',('work_email','ilike',self),('name','ilike',self)]"/>
                    <field name="department_id"/>
                    <!--
                    <field name="category_ids" groups="hr.group_hr_user"/>
                    -->
                    <field name="category_employee" groups="hr.group_hr_user"/>
                    <field name="job_id" />
                    <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Manager" domain="[]" context="{'group_by':'parent_id'}"/>
                        <filter string="Coach" domain="[]" context="{'group_by':'coach_id'}"/>
                        <filter string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Job" domain="[]" context="{'group_by':'job_id'}"/>
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

