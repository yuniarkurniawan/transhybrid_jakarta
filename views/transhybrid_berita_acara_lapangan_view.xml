<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    	<!-- TREE VIEW -->
        <record id="sale_order_line_service_balap_tree_view" model="ir.ui.view">
            <field name="name">sale.order.line.service.balap.tree.view</field>
            <field name="model">sale.order.line.service.model</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                	<field name="company_name" string="Customer"/>
                	<field name="po_order_date" string="Order Date"/>
                    <field name="rsf_date" string="RFS Date"/>
                    <field name="product_order_line" string="Product" />
                    <field name="service_id" string="Service"/>
                    <field name="item_service_id" string="Item Service"/>
                    <field name="assign_to" string="Worker"/>
                    <field name="is_customer_sign" string="Signature"/>

                </tree>
            </field>
        </record>


        <!-- FORM VIEW -->
        <record id="sale_order_line_service_model_balap_form_view" model="ir.ui.view">
            <field name="name">sale.order.line.service.model.balap.form.view</field>
            <field name="model">sale.order.line.service.model</field>
            <field name="arch" type="xml">
                <form 
                	create="false" 
                    delete="false"
                    >

                    <header>
                        <field 
                                name="is_customer_sign" 
                                widget="statusbar" 
                                statusbar_visible="1,2"/>
                    </header>

                    <sheet>
                		<group>

                            <field 
                                name="po_name" 
                                string="Purchase Order"
                                class="oe_inline"
                            />

                            <field 
                                name="po_order_date" 
                                string="Date Order"
                                class="oe_inline"
                            />
                            
                            <field 
                                name="rsf_date" 
                                string="RFS Date"
                                class="oe_inline"
                            />
                        </group>

                        <group>
                            <field 
                                name="assign_to"
                                string="Worker"/>
                            <field 
                                name="assign_to_phone"
                                string="Phone" />
                        </group>

                        <group>
                            
                            <field 
                                name="company_name" 
                                string="Customer"
                                class="oe_inline"
                            />

                            <field 
                                name="company_address"
                                string="Address"
                                class="oe_inline"/>

                            <field 
                                name="pic"
                                string="PIC Customer"/>

                            <field 
                                name="company_phone"
                                string="Phone"/>

                            <field 
                                name="company_fax"
                                string="Fax"/>

                        </group>

                        <group>
                            <field 
                                name="service_id" 
                                string="Service"
                                class="oe_inline"
                            />

                            <field 
                                name="item_service_id" 
                                string="Item Service"
                                class="oe_inline"
                            />



                        </group>

                        <!--
                        <group>

                            <field 
                                name="google_map" 
                                string="Map" 
                                widget="map" 
                                 />
                        </group>
             		     -->
                	</sheet>
                </form>
            </field>
        </record>




        <!--  SEARCH VIEW -->
        <record model="ir.ui.view" id="sale_order_line_service_balap_search_view">
            <field name="name">sale.order.line.service.balap.search.view</field>
            <field name="model">sale.order.line.service.model</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Customer">
                   
                    <field name="po_name" />
                    <field name="po_order_date" />
                    <field name="rsf_date" />
                    <field name="product_order_line" />
                    <field name="service_id" />
                    <field name="item_service_id" />
                    <field name="company_name" />

                   
                    <filter 
                            name="group_by_po_name" 
                            string="Purchase Order" 
                            context="{'group_by' : 'po_name'}" />
                       
                    
                    
                </search>
            </field>
        </record>



        <!-- ACTION VIEW -->
        <record id="sale_order_line_service_balap_action" model="ir.actions.act_window">
            <field name="name">BALAP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line.service.model</field>
            <field name="view_type">form</field>
            <!--<field name="view_mode">tree,kanban,form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sale_order_line_service_balap_search_view"/>
            <field name="context">{
                'search_default_group_by_po_name':1
                }</field>
            <field name="domain">[
                ('po_state','!=','cancel')
                ]</field>
            
        </record>

        <record id="action_sale_order_line_service_balap_tree_view1" 
        	model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_order_line_service_balap_tree_view"/>
            <field name="act_window_id" ref="sale_order_line_service_balap_action"/>
        </record>

        <record id="action_sale_order_line_service_balap_form_view1" 
        	model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_line_service_model_balap_form_view"/>
            <field name="act_window_id" ref="sale_order_line_service_balap_action"/>
        </record>

        <menuitem 
        	action="sale_order_line_service_balap_action" 
        	icon="STOCK_JUSTIFY_FILL" sequence="1"
            id="sale_order_line_service_balap_menu_view" 
            parent="sub_menu_reporting_acceptance_official_transhybrid"
        />
    	

    </data>
</openerp>