<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    	<!-- TREE VIEW -->
        <record id="transhybrid_survey_news_tree_view" model="ir.ui.view">
            <field name="name">transhybrid.survey.news.tree.view</field>
            <field name="model">transhybrid.survey.news</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Number"/>
                    <field name="nama_pelanggan" string="Customer"/>
                    <field name="sale_order_line" string="Product Order"/>
                    <field name="sale_order_line_service" string="Service"/> 
                    <field name="state" string="State"/>                  
                </tree>
            </field>
        </record>


        <!-- FORM VIEW -->
        <record id="transhybrid_survey_news_form_view" model="ir.ui.view">
            <field name="name">transhybrid.survey.news.form.view</field>
            <field name="model">transhybrid.survey.news</field>
            <field name="arch" type="xml">
                <form>           

                    <header>

                        <button 
                                name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                attrs="{'invisible':[('state','in',(2,3))]}"
                                />

                        <button 
                                name="action_signed" 
                                string="Confirm" 
                                type="object" 
                                attrs="{'invisible':[('state','in',(2,3))]}"
                                />
                            
                        <field name="state" widget="statusbar" statusbar_visible="1,2,3"/>
                    </header>

                    <sheet>

                        <h2>Purchase Order</h2>
                        <group>
                            <field 
                                name="name"
                                string="Number"
                                readonly="1"
                                class="oe_inline"
                                />

                            <field 
                                name="name_show"
                                string="Number"
                                invisible="1"
                                class="oe_inline"
                                />

                            <field 
                                name="sale_order" 
                                class="oe_inline"
                                options="{'always_reload': True,'no_open':True,'no_quick_create': True, 'no_create_edit' : True}"
                                string="Purchase Order"/>

                            <field 
                                name="sale_order_line" 
                                class="oe_inline"
                                domain="[('order_id','=',sale_order)]"
                                options="{'always_reload': True,'no_open':True,'no_quick_create': True, 'no_create_edit' : True}"
                                string="Product"/>

                            <field 
                                name="sale_order_line_service" 
                                class="oe_inline"
                                domain="[('sale_order_line_id','=',sale_order_line),('is_bas','=',1)]"
                                options="{'always_reload': True,'no_open':True,'no_quick_create': True, 'no_create_edit' : True}"
                                string="Service"/>


                        </group>

                        <h2>Data Pelanggan</h2>  

                        <group>
                            <field 
                                name="nama_pelanggan"
                                string="Nama Pelanggan"
                                class="oe_inline"
                                
                                />

                            <field 
                                name="alamat_pelanggan"
                                class="oe_inline"
                                string="Alamat Survey"
                                
                                />
                            
                            <field 
                                name="telp_pelanggan"
                                string="Telp."
                                class="oe_inline"
                                
                                />
                            
                            <field 
                                name="email_pelanggan"
                                class="oe_inline"
                                string="Email"
                                />

                            <field 
                                name="akses_permit_pelanggan"
                                class="oe_inline"
                                string="Akses Permit"
                                />

                            <field 
                                name="catatan_pelanggan"
                                class="oe_inline"
                                string="Catatan"/>
                        </group>



                        <notebook>

                            <page string="Pembuat Order">
                                <group>
                                    <field 
                                        name="name_pembuat_order" 
                                        class="oe_inline"
                                        string="Name"/>
                                    
                                    <field 
                                        name="nik_pembuat_order"
                                        class="oe_inline"
                                        string="NIK"/>
                                    
                                    <field 
                                        name="telp_pembuat_order"
                                        class="oe_inline"
                                        string="Telp."
                                        />
                                    
                                    <field 
                                        name="alamat_pembuat_order"
                                        class="oe_inline"
                                        string="Address"
                                        />                            
                                        
                                </group>
                            </page>

                            <page string="Jenis Layaran">
                                <group>
                                    <group>
                                        <field 
                                            name="is_internet"
                                            string="Internet" 
                                            type="checkbox" 
                                        />

                                        <field 
                                            name="is_voice"
                                            string="Voice"
                                            type="checkbox"
                                            />

                                        <field 
                                            name="is_metro_e"
                                            string="Metro E"
                                            type="checkbox"
                                        />

                                        <field 
                                            name="is_vsat"
                                            string="VSAT"
                                            type="checkbox"
                                            />

                                    </group>
                                    <group>
                                        <field 
                                            name="is_local_loop"
                                            string="Internet" 
                                            type="checkbox" 
                                        />

                                        <field 
