                                            type="checkbox"
                                            />

                                        <field 
                                            name="is_tdm"
                                            string="TDM"
                                            type="checkbox"/>

                                        <field 
                                            name="is_dw_dm"
                                            type="checkbox"
                                            string="DWDM"/>

                                    </group>
                                </group>
                            </page>

                            <page string="Data Mitra">
