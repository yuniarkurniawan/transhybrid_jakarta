                                    <field 
                                        name="nama_mitra"
                                        class="oe_inline"
                                        string="Email"
                                        />

                                    <field 
                                        name="alamat_mitra"
                                        class="oe_inline"
                                        string="Akses Permit"
                                        />

                                    <field 
                                        name="telp_mitra"
                                        class="oe_inline"
                                        string="Catatan"/>
                                </group>

                            </page>

                            <page string="Media Transmisi">
                                <group>

                                    <group>
                                        <field 
                                            name="is_fiber_optic"
                                            string="Fiber Optic" 
                                            type="checkbox" 
                                        />

                                        <field 
                                            name="is_wire_less"
                                            string="Wireless"
                                            type="checkbox"
                                            />

                                        <field 
                                            name="is_ethernet"
                                            string="Ethernet"
                                            type="checkbox"
                                        />

                                        
                                    </group>

                                    <group>
                                        <field 
                                            name="is_radio"
                                            string="Radio" 
                                            type="checkbox" 
                                        />

                                        <field 
                                            name="is_vsat_2"
                                            string="VSAT"
                                            type="checkbox"
                                            />

                                    </group>

                                </group>

                            </page>

                            <page string="Kondisi Tempat">

                                <group>
                                    <field 
                                        name="longitude"
                                        string="Longitude" 
                                        class="oe_inline" 
                                    />

                                    <field 
                                        name="latitude"
                                        string="Latitude"
                                        class="oe_inline"
                                        />

                                    <field 
                                        name="nama_tempat"
                                        string="Nama Tempat"
                                        class="oe_inline"
                                    />
                                </group>

                                <group>

                                    <group>

                                        <field 
                                            name="penangkal_petir"
                                            string="Penangkal Petir"
                                            widget="radio"/>

                                        <field 
                                            name="air_conditione"
                                            string="Air Condition"
                                            widget="radio"/>

                                        <field 
                                            name="grouding"
                                            string="Grounding"
                                            widget="radio"/>

                                        <field 
                                            name="sumber_power"
                                            string="Sumber Power"
                                            widget="radio"/>

                                        <field 
                                            name="kabel_indoor"
                                            string="Kabel Indoor"
                                            widget="radio"/>

                                    </group>

                                    <group>

                                        <field 
                                            name="tipe_power"
                                            string="Tipe Power"
                                            widget="radio"/>

                                        <field 
                                            name="pondasi"
                                            string="Pondasi"
                                            widget="radio"/>

                                        <field 
                                            name="rack"
                                            string="Rack"
                                            widget="radio"/>

                                         <field 
                                            name="kabel_outdoor"
                                            string="Kabel Outdoor"
                                            widget="radio"/>
                                        <field 
                                            name="kabel_tray"
                                            string="Kabel Tray"
                                            widget="radio"/>
                                    </group>

                                </group>

                                <group>
                                    <field 
                                        name="panjang_kabel_power"
                                        string="Panjang Kabel Power"
                                        class="oe_inline"
                                        />

                                    <field 
                                        name="panjang_kabel_grounding"
                                        string="Panjang Kabel Grounding"
                                        class="oe_inline"
                                        />

                                    <field 
                                        name="jenis_kunci"
                                        string="Jenis Kunci"
                                        class="oe_inline"
                                        />

                                    <field 
                                        name="pemilik_kunci"
                                        string="Pemilik Kunci"
                                        class="oe_inline"
                                        />

                                    <field 
                                        name="kesiapan_perangkat"
                                        string="Kesiapan Perangkat"
                                        widget="radio"
                                        />

                                    <field 
                                        name="kesiapan_rack"
                                        string="Kesiapan Rack"
                                        widget="radio"
                                        />

                                    <field 
                                        name="catatan_kondisi_tempat"
                                        string="Catatan Kondisi Tempat"
                                        class="oe_inline"
                                        />

                                </group>

                            </page>

                        </notebook>

